<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--DatePickerDialog-->
    <style name="DatePickerDialog"/>
    <style name="DatePickerDialog.Material" parent="android:Theme.Material.Light.Dialog"/>
    <style name="DatePickerDialog.Holo" parent="android:Theme.Holo.Light.Dialog"/>

    <!--EditTextt-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
